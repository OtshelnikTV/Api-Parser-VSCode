{
  "name": "api-parser-vscode",
  "displayName": "API Parser",
  "description": "VS Code port of IntelliJ YAMLâ€‘docs widget for parsing and visualizing API documentation",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "categories": ["Other", "Visualization"],
  "keywords": ["yaml", "api", "documentation", "parser", "swagger", "openapi"],
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./out/extension.js",
  "activationEvents": ["onStartupFinished"],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "express": "^4.18.2",
    "get-port": "^5.1.1"
  },
  "devDependencies": {
    "typescript": "^5.0.4",
    "@types/node": "^20.1.0",
    "@types/express": "^4.17.17",
    "@types/vscode": "^1.85.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "apiParser.open",
        "title": "Open YAML Docs (API Parser)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "apiParser",
          "title": "API Parser",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "apiParser": [
        {
          "id": "apiParser.apiParserView",
          "name": "YAML Docs",
          "icon": "resources/icon.svg"   
        }
      ]
    }
  },
  "files": [
    "out/**",
    "resources/web/**"
  ]
}
